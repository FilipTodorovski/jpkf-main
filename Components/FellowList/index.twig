<section id="js-jpkf-fellow-list" class="jpkf-fellow-list">
    <div class="container--small">
        <div class="pre-title pre-title--left-line">{{ title }}</div>
        <div class="jpkf-fellow-list__row">
            {% for fellow in fellow_list %}
                <div class="jpkf-fellow-list__col">
                    <div class="jpkf-fellow-list__avatar">
                        {% if fellow.linkedin_url %}
                            <a href="{{ fellow.linkedin_url }}">
                                <img
                                    class="lazyload"
                                    src="{{ placeholderImage(280, 250) }}"
                                    data-src="{{ fellow.avatar.src|resizeDynamic(280, 250) }}"
                                    data-srcset="{{ fellow.avatar.src|resizeDynamic(280, 250) }} 1x, {{ fellow.avatar.src|resizeDynamic(560, 500) }} 2x"
                                    data-sizes="auto"
                                    alt="{{ fellow.avatar.alt|e }}"
                                />
                                <div class="jpkf-fellow-list__linkedin-svg">
                                    <svg width="29" height="29" viewBox="0 0 29 29" fill="none"><path d="M26.8533 0H2.14102C0.957227 0 0 0.93457 0 2.09004V26.9043C0 28.0598 0.957227 29 2.14102 29H26.8533C28.0371 29 29 28.0598 29 26.91V2.09004C29 0.93457 28.0371 0 26.8533 0ZM8.60371 24.7123H4.29902V10.8693H8.60371V24.7123ZM6.45137 8.9832C5.06934 8.9832 3.95352 7.86738 3.95352 6.49102C3.95352 5.11465 5.06934 3.99883 6.45137 3.99883C7.82773 3.99883 8.94355 5.11465 8.94355 6.49102C8.94355 7.86172 7.82773 8.9832 6.45137 8.9832ZM24.7123 24.7123H20.4133V17.9834C20.4133 16.3805 20.385 14.3131 18.176 14.3131C15.9387 14.3131 15.5988 16.0633 15.5988 17.8701V24.7123H11.3055V10.8693H15.4289V12.7611H15.4855C16.0576 11.6736 17.4623 10.5238 19.5523 10.5238C23.908 10.5238 24.7123 13.3898 24.7123 17.1168V24.7123Z" fill="white"/></svg>
                                </div>
                            </a>
                        {% else %}
                            <img
                                class="lazyload"
                                src="{{ placeholderImage(280, 250) }}"
                                data-src="{{ fellow.avatar.src|resizeDynamic(280, 250) }}"
                                data-srcset="{{ fellow.avatar.src|resizeDynamic(280, 250) }} 1x, {{ fellow.avatar.src|resizeDynamic(560, 500) }} 2x"
                                data-sizes="auto"
                                alt="{{ fellow.avatar.alt|e }}"
                            />
                        {% endif %}
                    </div>
                    <div class="jpkf-fellow-list__name">
                        <h3 class="h3">{{ fellow.name }}</h3>
                    </div>
                    <div class="jpkf-fellow-list__year">
                        <h3 class="h4">{{ fellow.year }}</h3>
                    </div>
                    <div class="jpkf-fellow-list__role">
                        {{ fellow.role|apply_filters('the_content') }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>